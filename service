#!/bin/bash


__exec() {
	$@ || ((retval++))
}

start() {
	retval=0
	__exec /genconfig
	__exec /usr/local/bin/firewall start 
	__exec /etc/init.d/radiusd start
	__exec /etc/init.d/carbon_coad start
	return $retval
	
}

stop() {
	local retval=0
	__exec /usr/local/bin/firewall stop
	__exec /etc/init.d/carbon_coad stop
	__exec /etc/init.d/radiusd stop
	return $retval
}

restart() {
	stop
	start
}

$1
